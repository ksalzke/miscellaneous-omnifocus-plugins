var _ = function(){
var action = new PlugIn.Action(function(selection, sender){

	var tagToRemove = tagNamed("Status").tagNamed("â˜€ï¸ MIT (Tomorrow)");
	var tagToAdd = tagNamed("Status").tagNamed("ğŸ¯ MIT");

	// get all tasks tagged with the tag that is to be removed
	var tasksForTomorrow = tagToRemove.tasks;

	// replace tag
	tasksForTomorrow.forEach(function(task) {
		task.addTag(tagToAdd);
		task.removeTag(tagToRemove);
});

});

action.validate = function(selection, sender){

	return true
};

return action;

}();
